<?xml version="1.0" encoding="utf-8"?>
<app:FlexibleLiferayAirAppBase title="FlexibleLiferay" 
    xmlns:mx="http://www.adobe.com/2006/mxml" 
    xmlns:app="org.integratedsemantics.flexibleliferayair.app.*"
    horizontalAlign="left"
    width="1000" height="700"
    paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0"
    applicationComplete="onApplicationComplete()">

    <mx:Style source="flexibleliferayair.css" />
    
    <mx:RemoteObject id="placesService" result="getPlacesResult(event)"
        endpoint="/messagebroker/amf" destination="PlacesService"/>

    <mx:RemoteObject id="layoutService" result="getLayoutsResult(event)"
        endpoint="/messagebroker/amf" destination="LayoutService"/>

    <mx:RemoteObject id="userService" result="loginResult(event)"
        endpoint="/messagebroker/amf" destination="UserService"/>

    <mx:VBox id="vbox" width="100%" height="100%">
        <mx:ApplicationControlBar dock="true" width="100%" height="30" verticalAlign="middle">
            <mx:Button id="cascadeBtn" label="Cascade" click="cascade()" />
            <mx:Button id="tileBtn" label="Tile" click="tile()" />
            <mx:MenuBar id="placesMenuBar" labelField="name"/>
            <mx:Button id="addPageBtn" label="+ Page"/>
            <mx:Button id="addAppBtn" label="+ App"/>
            <mx:Button id="controlPanelBtn" label="Control Panel"/>  
            <mx:Button id="signInBtn" label="Sign In" click="onClickSignIn(event)"/>            
            <mx:Button id="signOutBtn" label="Sign Out" visible="false" includeInLayout="false" 
            	click="onClickSignOut(event)"/>            
            <mx:Label id="userLabel" text="" />          
        </mx:ApplicationControlBar>
        <mx:ViewStack id="modeViewStack" width="100%" height="100%">
        
            <!-- portal dashboard view -->
            <mx:VBox width="100%" height="100%">
                <mx:TabBar
                    id="tabBar"
                    itemClick="onItemClickTabBar(event)"
                    height="35" 
                    dataProvider="viewStack"
                    styleName="viewTabs" tabStyleName="viewTab" />
                <mx:ViewStack
                    id="viewStack"
                    paddingTop="0"
                    width="100%" height="100%" />   
            </mx:VBox>
            
        </mx:ViewStack>         
    </mx:VBox> 
    
</app:FlexibleLiferayAirAppBase>
